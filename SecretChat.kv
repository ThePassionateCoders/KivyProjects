#:import Clipboard kivy.core.clipboard.Clipboard
MainLayout:
	
<MainLayout>
	spacing: 20
	padding:20
	rows:2
	TextInput:
		id:textinput
		font_size: "20dp"
		text: root.text_to_display
	GridLayout:
		rows:4
		spacing: 20
		
		GridLayout:
			spacing: 20
			cols:2
			
			Button:
				text: "Encrypt"
				font_size:50
				on_press: root.encrypt()
			Button:
				text: "Decrypt"
				font_size: 50
				on_press: root.decrypt()
				
		Button:
			text: "Copy"
			font_size: 50
			on_press: Clipboard.copy(textinput.text)
			on_release: textinput.text="Copied!"
		Button:
			text: "Clear"
			font_size: 50
			on_press: textinput.text=""			
		Button:
			text: "Exit"
			font_size: 50
			on_press: quit()